// src/components/Profile/Profile.js

import React, { useEffect, useState } from "react";
import DebtBox from "./DebtBox";
import BorrowedBooks from "./BorrowedBooks";
import ReservedBooks from "./ReservedBooks";
import "./Profile.css";

const Profile = () => {
  const [amountOwed, setAmountOwed] = useState(0);
  const [borrowedBooks, setBorrowedBooks] = useState([]);
  const [reservedBooks, setReservedBooks] = useState([]);

  useEffect(() => {
    loadProfileData();
  }, []);

  const loadProfileData = async () => {
    await fetchDebt();
    await fetchBorrowed();
    await fetchReserved();
  };

  // ---------------------------
  // BACKEND FUNCTIONS (YOU WILL IMPLEMENT THEM)
  // ---------------------------

  const fetchDebt = async () => {
    // TODO: Make request to backend to get user's owed money
    // Example:
    // const result = await fetch("/api/debt");
    // const data = await result.json();
    // setAmountOwed(data.amount);
  };

  const fetchBorrowed = async () => {
    // TODO: Make request to backend to get borrowed books
    // Example:
    // const result = await fetch("/api/borrowed");
    // const data = await result.json();
    // setBorrowedBooks(data.books);
  };

  const fetchReserved = async () => {
    // TODO: Make request to backend to get reserved books
    // Example:
    // const result = await fetch("/api/reserved");
    // const data = await result.json();
    // setReservedBooks(data.reserved);
  };

  // ---------------------------

  return (
    <div className="profile-wrapper">
      <h2 className="profile-title">My Profile</h2>

      <div className="profile-sections">

        {/* Amount Owed */}
        <DebtBox amountOwed={amountOwed} />

        {/* Borrowed Books */}
        <BorrowedBooks books={borrowedBooks} />

        {/* Reserved Books */}
        <ReservedBooks reserved={reservedBooks} />

      </div>
    </div>
  );
};

export default Profile;

