      {books.length === 0 ? (
        <p>No borrowed books.</p>
      ) : (
        <ul>
          {books.map((b, index) => (
            <li key={index}>
              <strong>{b.title}</strong> ‚Äî {b.daysRemaining} days remaining
            </li>
          ))}
        </ul>
      )}
    </div>
  );
};

export default BorrowedBooks;

‚úÖ ReservedBooks.js (unchanged)

const ReservedBooks = ({ reserved }) => {
  return (
    <div className="reserved-box">
      <h3>Reserved Books</h3>

      {reserved.length === 0 ? (
        <p>No reserved books.</p>
      ) : (
        <ul>
          {reserved.map((r, index) => (
            <li key={index}>
              <strong>{r.title}</strong> ‚Äî {r.status}
            </li>
          ))}
        </ul>
      )}
    </div>
  );
};

export default ReservedBooks;

